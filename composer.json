{
    "name": "zestic/weaviate-client-component",
    "description": "Laminas/Mezzio integration component for the Weaviate PHP client with dependency injection, multiple client support, and comprehensive configuration",
    "type": "library",
    "license": "Apache-2.0",
    "keywords": [
        "weaviate",
        "vector-database",
        "laminas",
        "mezzio",
        "dependency-injection",
        "ai",
        "machine-learning",
        "search"
    ],
    "authors": [
        {
            "name": "Corvus Meliora",
            "email": "corvus@zestic.com"
        }
    ],
    "homepage": "https://github.com/zestic/weaviate-client-component",
    "support": {
        "issues": "https://github.com/zestic/weaviate-client-component/issues",
        "source": "https://github.com/zestic/weaviate-client-component"
    },
    "require": {
        "php": "^8.3",
        "zestic/weaviate-php-client": "^1.0",
        "laminas/laminas-servicemanager": "^3.22",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "ergebnis/composer-normalize": "^2.42",
        "laminas/laminas-config-aggregator": "^1.14"
    },
    "autoload": {
        "psr-4": {
            "Zestic\\WeaviateClientComponent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zestic\\WeaviateClientComponent\\Test\\": "test/"
        }
    },
    "scripts": {
        "cs-check": "phpcs src test --standard=PSR12",
        "cs-fix": "phpcbf src test --standard=PSR12",
        "phpstan": "phpstan analyse src test --level=8",
        "security-audit": "composer audit --format=table",
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-unit": "phpunit test/Unit",
        "test-integration": "phpunit test/Integration",
        "normalize": "@composer normalize",
        "normalize-check": "@composer normalize --dry-run"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
