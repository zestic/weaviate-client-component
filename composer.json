{
    "name": "zestic/weaviate-client-component",
    "description": "Laminas/Mezzio integration component for the Weaviate PHP client with dependency injection, multiple client support, and comprehensive configuration",
    "license": "Apache-2.0",
    "type": "library",
    "keywords": [
        "weaviate",
        "vector-database",
        "laminas",
        "mezzio",
        "dependency-injection",
        "ai",
        "machine-learning",
        "search"
    ],
    "authors": [
        {
            "name": "Corvus Meliora",
            "email": "corvus@zestic.com"
        }
    ],
    "homepage": "https://github.com/zestic/weaviate-client-component",
    "support": {
        "issues": "https://github.com/zestic/weaviate-client-component/issues",
        "source": "https://github.com/zestic/weaviate-client-component"
    },
    "require": {
        "php": "^8.4 || ^8.5",
        "guzzlehttp/guzzle": "^7.9",
        "guzzlehttp/psr7": "^2.7",
        "laminas/laminas-servicemanager": "^3.22 || ^4.0",
        "psr/container": "^1.0 || ^2.0",
        "zestic/weaviate-php-client": ">=0.4.0 <1.0.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.42",
        "laminas/laminas-config-aggregator": "^1.14",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Zestic\\WeaviateClientComponent\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zestic\\WeaviateClientComponent\\Test\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "cs-check": "phpcs src test --standard=PSR12",
        "cs-fix": "phpcbf src test --standard=PSR12",
        "normalize-check": "@composer normalize --dry-run",
        "phpstan": "phpstan analyse src test --level=8",
        "security-audit": "composer audit --format=table",
        "test": "phpunit",
        "test-all": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "test-integration": "phpunit test/Integration",
        "test-unit": "phpunit test/Unit/Configuration test/Factory",
        "test:full": "./scripts/test-with-weaviate.sh",
        "test:with-weaviate": "./scripts/test-with-weaviate.sh",
        "weaviate:start": "./scripts/start-weaviate.sh",
        "weaviate:stop": "./scripts/stop-weaviate.sh"
    }
}
